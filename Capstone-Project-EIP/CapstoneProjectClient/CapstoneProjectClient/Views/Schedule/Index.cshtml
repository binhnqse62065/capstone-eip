
@{
    ViewBag.Title = "Index";
}
@using HmsService.Models.Entities;
@model Event


    <div class="schedule-layout3">
        <div class="schedule-content">
            <div class="tab-content">
                @{ 
                    var activityItem = Model.Sessions.FirstOrDefault(e => e.SessionID == 1).Activities;
                    var collectionItem = Model.EventCollections.FirstOrDefault(e => e.EventCollectionID == 2).CollectionItems;
                        <table class="table table-bordered">
                            <tbody>
                                @foreach (var item in activityItem)
                                {
                                    <tr>
                                        <td>
                                            <a style="padding-right:2px">
                                                <div class="schedule-info">
                                                    <div class="media">
                                                        <div class="speaker-img" style="position:relative; right:25px">
                                                            <img src="@(item.ActivityItems.FirstOrDefault(e => e.ActivityId == item.ActivityID).CollectionItem.ImageUrl)" alt="schedule" class="rounded-circle img-circle" style="width:100%; height:100%">
                                                        </div>
                                                        <div class="media-body item-content"  style="position:relative;right:35px">
                                                            <h3 class="title title-medium color-dark size-sm">@(item.ActivityItems.FirstOrDefault(e => e.ActivityId == item.ActivityID).CollectionItem.Name)</h3>
                                                            <p>@(item.StartTime.ToString())</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </td>
                                        <td>
                                            <a tyle="padding-right:2px">
                                                <div class="schedule-info">
                                                    <div class="item-content">
                                                        <h3 class="title title-medium color-dark size-sm">@(item.Name)</h3>
                                                        <p>@(item.Description)</p>
                                                    </div>
                                                </div>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
            </div>
        </div>

    </div>
