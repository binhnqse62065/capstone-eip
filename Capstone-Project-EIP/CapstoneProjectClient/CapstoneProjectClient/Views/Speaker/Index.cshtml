
@{
    ViewBag.Title = "Diễn giả";
}

@using HmsService.Models.Entities;
@model EventCollection

@if (Model == null || Model.CollectionItems == null)
{
    <div class="collection-empty-title">
        <h3>Hiện tại chưa có danh sách diễn giả</h3>
    </div>

}
else
{
    <div class="row custom-row">
        @{
            foreach (var speaker in Model.CollectionItems)
            {
                <div class="col-md-4 col-sm-6 col-12" onclick="showModalSpeaker('@(speaker.Name)', '@(speaker.Description)', '@(speaker.ImageUrl)')">
                    <div class="box-speaker-shadow">
                        <a href="" data-toggle="modal" data-target="#speakerModal">
                            <img class="img-fluid image-speaker-custom" src="@(speaker.ImageUrl)" alt="brand">
                        </a>
                        <div class="item-title">
                            <h3 class="title title-medium" style="text-align:center">
                                <a class="speaker-name">@(speaker.Name)</a>
                            </h3>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
}


<div id="speakerModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-speaker">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title speaker-title"></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <img class="speaker-img image-speaker-custom"/>
                <p class="speaker-description"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function showModalSpeaker(name, description, imgUrl) {
            $('.speaker-title').html(name);
            $('.speaker-description').html(description);
            $('.speaker-img').attr('src', imgUrl);

        }

    </script>
}
