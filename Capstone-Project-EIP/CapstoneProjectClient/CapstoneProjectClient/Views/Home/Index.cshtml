@{
    ViewBag.Title = "Home Page";
    var listBannerImage = Model.EventCollections.FirstOrDefault(e => e.EventCollectionID == 1).CollectionItems;
}
@using HmsService.Models.Entities;
@model Event

<div class="container">
    <div class="event-banner" style="position: relative; height: auto;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); margin-top: 20px;">
        <img style="width:100%;height:auto" src="~/Content/img/new_statesman_events.jpg" >
        <div class="header" style="position: absolute;bottom: 15px;background: rgba(12, 12, 12, 0.5);">
            <h1 class="event-name text-white" style="padding: 10px 20px; font-size:1em;">Diễn đàn doanh nghiệp Hàng VN chất lượng cao và khởi nghiệp</h1>
        </div>
    </div>
    <br>
    <div class="animated fadeIn">
        <div class="card-content" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <div class="description p-10">
                <h2 class="section-title">Giới thiệu</h2>
                <br>

                <div style="color:black;line-height:23px">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-4 name-title">Event Name</div>
                                <div class="col-sm-8">@Html.Raw(Model.Name)</div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4 name-title">Time</div>
                                <div class="col-sm-8">@Html.Raw(Model.StartTime)</div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4 name-title">Address</div>
                                <div class="col-sm-8">@Html.Raw(Model.Address)</div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4 name-title">Description</div>
                                <div class="col-sm-8">@Html.Raw(Model.EventDescription)</div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


