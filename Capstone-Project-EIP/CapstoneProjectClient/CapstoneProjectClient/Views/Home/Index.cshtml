@{
    ViewBag.Title = "Thông tin sự kiện";
}
@using HmsService.ViewModels;
@model EventViewModel

<div class="container-fluid" style="padding-top: 64px;">
    <div class="animated fadeIn">
        <div class="event-banner">
            <img class="event-banner-image" src="~/Content/img/new_statesman_events.jpg">
            <div class="header event-header">
                <h3 class="event-name text-white">The Capstone Project Defense Ceremony</h3>
            </div>
        </div>
        <br>
    </div>
    <div class="animated fadeIn">
        <div class="card-content event-card-content">
            <div class="description p-10">
                <h4 class="section-title">Thông tin sự kiện</h4>
                <div class="row">
                    <div class="col-sm-6  custom-col">
                        <div class="row">
                            <div class="name-title custom-col"><i class="fa fa-flag custom-icon"></i> &nbsp;@Html.Raw(Model.Name)</div>
                            @*<div class="evtinfo custom-col"><span>@Html.Raw(Model.Name)</span></div>*@
                        </div>

                        <div class="row">
                            <div class="name-title custom-col"><i class="fa fa-clock-o custom-icon"></i> &nbsp;@Html.Raw(Model.StartTime.Value.ToString("dd/MM/yyyy hh:mm tt"))</div>
                            @*<div class="col-sm-8 evtinfo custom-col">@Html.Raw(Model.StartTime.Value.ToString("dd/MM/yyyy hh:mm tt"))</div>*@
                        </div>

                        <div class="row">
                            <div class="name-title custom-col"><i class="fa fa-map-marker custom-icon"></i> &nbsp;@Html.Raw(Model.Address)</div>
                            @*<div class="col-sm-8 evtinfo custom-col">@Html.Raw(Model.Address)</div>*@
                        </div>

                        <div class="row">
                            <div class="name-title custom-col"><i class="fa fa-pencil-square-o custom-icon"></i> &nbsp;@Html.Raw(Model.EventDescription)</div>
                            @*<div class="col-sm-8 evtinfo custom-col">@Html.Raw(Model.EventDescription)</div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $('.custom-menu').removeClass('menu-active');
            $('.menu-event').addClass('menu-active');
        });
    </script>
}