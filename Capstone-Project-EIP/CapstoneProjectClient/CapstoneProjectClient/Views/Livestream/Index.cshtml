
@{
    ViewBag.Title = "Livestream";
}
@using HmsService.ViewModels
@model SessionViewModel

@if (Model != null)
{
    if (Model.LivestreamUrl != null)
    {
        <div class="videoWrapper" style="padding-top: 64px;">
            <iframe @*style="width:100%; height:100%;"*@ width="100%" height="100%" src="@(Model.LivestreamUrl)" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        </div>
    }
    else
    {
        <div class="error-livestream-title">
            <h3 class="">Hiện tại chúng tôi chưa tiến hành livestream</h3>
        </div>
    }
}
else
{
    <div class="error-livestream-title">
        <h3 class="">Hiện tại chúng tôi chưa tiến hành livestream</h3>
    </div>

}



