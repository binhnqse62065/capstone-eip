
@{
    ViewBag.Title = "Voting";
}
@using HmsService.Models.Entities;

@model Event
@{
    var voting = Model.Sessions.FirstOrDefault(e => e.SessionID == 1).Interactions.FirstOrDefault(e => e.IsRunning == true).Voting;
    var votingQuestion = Model.Votings.FirstOrDefault(e => e.VotingId == voting.VotingId).VotingQuestions.FirstOrDefault(e => e.VotingQuestionId == 1).VotingQuestionContent;
    var listQuestionOptions = Model.Votings.FirstOrDefault(e => e.VotingId == voting.VotingId).VotingQuestions.FirstOrDefault(e => e.VotingQuestionId == 1).VotingOptions;
}

<link href="~/Content/bootstrap/Poll/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Bootstrap Poll Example</h2>
            <br />
        </div>
    </div>
    <div class="row ">
        <div class="col-md-4 col-md-offset-4">
            <div class="user-poll-section">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Question : </strong>@votingQuestion
                    </div>
                    <div class="panel-body">
                        @{
                            int i = 1;
                            foreach (var item in listQuestionOptions)
                            {
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="group-poll" value="@item.VotingOptionId">
                                        <strong>@(i).  </strong>@item.VotingOptionContent
                                    </label>
                                </div>
                                i++;
                            }
                        }
                    </div>
                    <p id="thanks" style="color:green; text-align:center"></p>
                    <div class="text-center">
                        <a id="btn-vote" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-bell"></span> Mark Your Vote</a>
                    </div>
                    <div id="result" class="panel-body">
                        <hr />
                        <h5 class="text-danger">Result Of User Votes :</h5>
                        <hr />
