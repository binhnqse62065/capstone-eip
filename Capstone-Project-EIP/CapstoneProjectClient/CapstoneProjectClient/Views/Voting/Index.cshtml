                        @{
                            int j = 1;
                            float s = 0;
                            float[] p = new float[listQuestionOptions.Count + 2];
                            foreach (var item in listQuestionOptions)
                            {
                                s = s + item.NumberOfVoting.Value;
                            }
                            foreach (var item in listQuestionOptions)
                            {
                                string classId = "myBar" + j;
                                string percentId = "demo" + j;
                                p[j] = (item.NumberOfVoting.Value / s) * 100;
                                double n = Math.Round(p[j]);
                                @item.VotingOptionContent <span id="@(percentId)"></span>
                                j++;
                                <div class="progress progress-striped">
                                    <div class="progress-bar progress-bar-success" role="progressbar" data-transitiongoal="@n"></div>
