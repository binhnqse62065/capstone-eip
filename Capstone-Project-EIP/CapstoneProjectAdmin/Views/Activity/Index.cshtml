
@{
    ViewBag.Title = "Index";
    
}
@using HmsService.Models.Entities;
@model Activity

<div class="container">
    <div class="box">
        <div class="box-header">
            <h2 class="col-sm-10">Manage Activity</h2>
            <a class="col-sm-2 btn btn-primary" href="@Url.Action("Edit","Activity")" style="margin-top:20px">
                <i class="fa fa-pencil btn-css" aria-hidden="true" style="margin-right:10px"></i>
                <span>Edit</span>
            </a>
        </div>
        <div class="box-body">
            <div class="col-sm-10">
                <div class="row">
                    <div class="col-sm-4">
                        <label class="name-title">Name</label>
                    </div>
                    <div class="col-sm-8 evtinfo">@Html.Raw(Model.Name)</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label class="name-title evtinfo">Start Time</label>
                    </div>
                    <div class="col-sm-8">@Html.Raw(Model.StartTime)</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label class="name-title evtinfo">End Time</label>
                    </div>
                    <div class="col-sm-8">@Html.Raw(Model.EndTime)</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label class="name-title">Description</label>
                    </div>
                    <div class="col-sm-8 evtinfo">@Html.Raw(Model.Description)</div>
                </div>
            </div>

        </div>
    </div>
</div>


