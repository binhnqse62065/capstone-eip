
@{
    ViewBag.Title = "Edit";
}



<div class="box">
    <div class="box-header d-flex align-items-center">
        <h2 class="h5 display">Edit Session</h2>
    </div>

    <div class="box-body">
        <form class="form-horizontal">

            <div class="form-group">
                <label class="col-sm-2 form-control-label">Name:</label>
                <div class="col-sm-10 input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-briefcase" aria-hidden="true"></i>
                    </div>
                    <input type="text" class="form-control" placeholder="Enter event's name">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 form-control-label">Start Time</label>
                <div class="col-sm-10 input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar-o" aria-hidden="true"></i>
                    </div>
                    <input type="text" class="form-control" placeholder="Enter start time">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 form-control-label">End Time</label>
                <div class="col-sm-10 input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar-o" aria-hidden="true"></i>
                    </div>
                    <input type="text" class="form-control" placeholder="Enter end time">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 form-control-label">Description:</label>
                <div class="col-sm-10 input-group">
                    <textarea id="editor1" name="editor1" rows="10" cols="80">
                                            This is my textarea to be replaced with CKEditor.
                    </textarea>
                </div>
            </div>

            <div class="line"></div>
            <div class="col-sm-8">

            </div>
            <div class="col-sm-4">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <button type="submit" class="btn btn-secondary">Cancel</button>
            </div>

        </form>
    </div>
</div>

