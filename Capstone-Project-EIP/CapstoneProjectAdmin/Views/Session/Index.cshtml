
@{
    ViewBag.Title = "Manage Session";
}

@using HmsService.Models.Entities;
@model Session

<div class="container">
    <div class="box">
        <div class="box-header">
            <h2 class="col-sm-8">Manage Session</h2>
            <div class="col-sm-4">
                <div class="col-sm-2"></div>
                <button class="col-sm-5 btn btn-primary" data-toggle="modal" data-target="#addSessionModal" style="margin-top:20px" type="button">
                    <i class="fa fa-plus" style="margin-right:7px" aria-hidden="true"></i>Add Session
                </button>
            </div>

            <div class="modal fade" id="addSessionModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add Session</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="col-sm-3 form-control-label">Name:</label>
                                <div class="col-sm-9 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-briefcase" aria-hidden="true"></i>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Enter Speaker's name">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 form-control-label">Date and time range:</label>

                                <div class="input-group col-sm-9">
                                    <div class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="reservation" value="@Html.Raw(Model.StartTime)">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 form-control-label">Description:</label>
                                <div class="col-sm-9 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-info" aria-hidden="true"></i>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Enter Description">
                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary">Add</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <div class="box-body">
            <div class="col-sm-10">
                <div class="row">
                    <div class="col-sm-4">
                        <label class="name-title">Name</label>
                    </div>
                    <div class="col-sm-8">@Html.Raw(Model.Name)</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label class="name-title">Start Time</label>
                    </div>
                    <div class="col-sm-8">@Html.Raw(Model.StartTime)</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label class="name-title">End Time</label>
                    </div>
                    <div class="col-sm-8 evtinfo">@Html.Raw(Model.EndTime)</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label class="name-title">Description</label>
                    </div>
                    <div class="col-sm-8 evtinfo">@Html.Raw(Model.Description)</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label class="name-title">Livestream Url</label>
                    </div>
                    <div class="col-sm-8 evtinfo"></div>
                </div>

            </div>

        </div>
    </div>
    <table class="table table-hover table-bordered" id="tblSession">
        <thead>
            <tr>
                <th>Session Name</th>
                <th>Start Time</th>
                <th>End Time</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#tblSession').DataTable({
                ajax: {
                    url: "api/session/getAllSession",
                    dataSrc: ""
                },
                columns: [
                    {
                        name: "name",
                        render: function (data, type, row) {
                            console.log(row);
                            return row.name;
                        }
                    },
                    {
                        name: "startTime",
                        render: function (data, type, row) {
                            return row.startTime;
                        }
                    },
                    {
                        name: "endTime",
                        render: function (data, type, row) {
                            return row.endTime;
                        }
                    }
                ]
            });

            //Date range picker
            $('#reservation').daterangepicker();
        });
    </script>
}

