
@{
    ViewBag.Title = "Quản lý phiên làm việc";
    int eventId = ViewBag.EventId;
    string curPath = Request.Url.GetLeftPart(UriPartial.Authority) + Request.ApplicationPath;

    string startDate = ViewBag.StartDate;
    string endDate = ViewBag.EndDate;
}


<div class="container">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <div class="row">
                <h2 class="col-sm-10">Quản lý phiên làm việc</h2>
                <div class="col-sm-2">
                    <button class="btn btn-primary" type="submit" data-toggle="modal" data-target="#addSessionModal" style="margin-top:20px">
                        <i class="fa fa-plus" style="margin-right:7px" aria-hidden="true"></i>Thêm
                    </button>
                </div>
            </div>
        </div>
        <div class="ibox-content">
            <table class="table table-hover table-bordered" id="tblSession">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Thời gian bắt đầu - kết thúc</th>
                        <th>Miêu tả</th>
                        <th>Địa điểm</th>
                        <th>Liên kết trực tuyến</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
            </table>
        </div>


    </div>

</div>


<!--Modal Add Session-->
<div class="modal fade" id="addSessionModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" @*style="min-width:700px;"*@>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm phiên làm việc</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Tên:</label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-briefcase" aria-hidden="true"></i>
                        </div>
                        <input id="txtNameAdd" type="text" class="form-control" placeholder="Nhập tên phiên làm việc">
                    </div>
                    <p class="error-title col-lg-offset-3" id="errorNameAdd">Vui lòng nhập tên phiên làm việc</p>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Thời gian diễn ra:</label>
                    <div class="input-group col-sm-9">
                        <div class="input-group-addon">
                            <i class="fa fa-clock-o"></i>
                        </div>
                        <input type="text" class="form-control pull-right" id="startEndTimeAdd" value="">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Miêu tả:</label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </div>
                        <input id="txtDescriptionAdd" type="text" class="form-control" placeholder="Vui lòng nhập miêu tả ">
                    </div>
                    <p class="error-title col-lg-offset-3" id="errorDesAdd">Vui lòng nhập miêu tả phiên làm việc</p>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Địa điểm</label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </div>
                        <input id="txtSessionAddress" type="text" class="form-control" placeholder="Nhập địa điểm">
                    </div>
                    <p class="error-title col-lg-offset-3" id="errorAddressAdd">Vui lòng nhập địa điểm phiên làm việc</p>

                </div>
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Liên kết trực tuyến:</label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-link" aria-hidden="true"></i>
                        </div>
                        <input id="txtLivestreamAdd" type="text" class="form-control" placeholder="Vui lòng nhập liên kết trực tuyến">
                    </div>
                    <p class="error-title col-lg-offset-3" id="errorLivestreamAdd">Vui lòng nhập liên kết trực tuyến phiên làm việc</p>
                </div>

            </div>
            <div class="modal-footer">
                <button id="btn-add-session" type="button" class="btn btn-primary" data-dismiss="modal">Thêm</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy bỏ</button>
            </div>
        </div>

    </div>
</div>



<!-- Modal Update Session -->
<div id="modalUpdateSession" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật thông tin phiên làm</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">
                        Tên<span class="required">*</span>
                    </label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-briefcase" aria-hidden="true"></i>
                        </div>
                        <input id="sessionName" type="text" class="form-control" placeholder="Nhập tên phiên làm việc">
                    </div>
                    <p class="error-title col-lg-offset-3" id="errorNameEdit">Vui lòng nhập tên phiên làm việc</p>

                </div>
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">
                        Thời gian diễn ra<span class="required"></span>
                    </label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-briefcase" aria-hidden="true"></i>
                        </div>
                        <input id="startEndTimeUpdate" type="text" class="form-control" placeholder="Nhập thời gian diễn ra">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Miêu tả</label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </div>
                        <input id="sessionDescription" type="text" class="form-control" placeholder="Nhập miêu tả">
                    </div>
                    <p class="error-title col-lg-offset-3" id="errorDesEdit">Vui lòng nhập miêu tả phiên làm việc</p>

                </div>
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Địa điểm</label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </div>
                        <input id="sessionAddress" type="text" class="form-control" placeholder="Nhập địa điểm">
                    </div>
                    <p class="error-title col-lg-offset-3" id="errorAddressEdit">Vui lòng nhập địa điểm phiên làm việc</p>

                </div>
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Liên kết trực tuyến</label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-link" aria-hidden="true"></i>
                        </div>
                        <input id="sessionLivestreamUrl" type="text" class="form-control" placeholder="Nhập liên kết trực tuyến">
                    </div>
                    <p class="error-title col-lg-offset-3" id="errorLivestreamEdit">Vui lòng nhập liên kết trực tuyến phiên làm việc</p>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-update-session" class="btn btn-primary" data-dismiss="modal">Lưu</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="txtSessionId" value="" />

@section scripts {
    <script>
        var urlApi = '@curPath';
        var eventId = @eventId;

        $(document).ready(function () {
            $('#tblSession').DataTable({
                "oLanguage": {
                    "sSearch": "Tìm kiếm",
                    "oPaginate": {
                        "sFirst": "Trang đầu",
                        "sLast": "Trang cuối",
                        "sNext": "Trang kế",
                        "sPrevious": "Trang trước"
                    },
                    "sInfoEmpty": "",
                    "sInfo": "Hiển thị từ dòng _START_ tới _END_ trong tổng số _TOTAL_ dòng",
                    "sZeroRecords": "Không có dữ liệu",
                    "sLengthMenu": "Hiển thị _MENU_ dòng"
                },
                ajax: {
                    url: urlApi + "/api/session/getSessionsByEventId/" + eventId,
                    dataSrc: ""
                },
                columns: [
                    {
                        name: "name",
                        render: function (data, type, row) {
                            return row.name;
                        }
                    },
                    {
                        name: "startTime - End Time",
                        render: function (data, type, row) {
                            return row.startTime + " - " + row.endTime;
                        }
                    },
                    {
                        name: "Description",
                        render: function (data, type, row) {
                            return row.description;
                        }
                    },
                    {
                        name: "Address",
                        render: function (data, type, row) {
                            return row.address;
                        }
                    },
                    {
                        name: "Livestream",
                        render: function (data, type, row) {
                            return row.livestreamUrl;
                        }
                    },
                    {
                        name: "Function",
                        render: function (data, type, row) {
                            return '<button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalUpdateSession" onclick="openModelUpdate(' + row.sessionID + ',\'' + row.name + '\', \'' + row.startTime + '\', \'' + row.endTime + '\', \'' + row.description + '\', \'' + row.livestreamUrl + '\', \'' + row.address + '\')"><i class="fa fa-pencil"></i></button>     ' +
                                '<button class="btn btn-danger btn-sm btn-delete" onclick="deleteSession(' + row.sessionID + ')"><i class="fa fa-trash"></i></button>';
                        }
                    }
                ]
            });


            //Date range picker
            $('#startEndTimeAdd').daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY HH:mm'
                },
                startDate: '@(startDate)',
                endDate: '@(endDate)',
                minDate: '@(startDate)',
                maxDate: '@(endDate)',
                timePicker: true,
                timePicker24Hour: true,
                timePickerIncrement: 10,
                onSelect: function (dateText) {
                    updateSelects(dateText);
                }
            });


            //Save update session
            $('#btn-update-session').on('click', function () {
                clearErrorEditSession();

                var sessionName = $('#sessionName').val()
                var sessionDescription = $('#sessionDescription').val();
                var livestreamUrl = $('#sessionLivestreamUrl').val();
                var sessionAddress = $('#sessionAddress').val();;

                var isValid = true;
                if (sessionName.length === 0) {
                    isValid = false;
                    $('#errorNameEdit').css('display', 'block');
                }
                if (sessionDescription.length === 0) {
                    isValid = false;
                    $('#errorDesEdit').css('display', 'block');
                }
                if (sessionAddress.length === 0) {
                    isValid = false;
                    $('#errorAddressEdit').css('display', 'block');
                }
                if (livestreamUrl.length === 0) {
                    livestreamUrl = '';
                }

                if (isValid) {
                    var time = $('#startEndTimeUpdate').val();
                    var timeSplit = time.split('-');
                    var startTimeTmp = timeSplit[0].trim();
                    var endTimeTmp = timeSplit[1].trim();

                    var startTimeStr = startTimeTmp;
                    var endTimeStr = endTimeTmp;

                    $.ajax({
                        url: urlApi + 'api/session/UpdateSession',
                        method: "POST",
                        data: {
                            Session: {
                                SessionID: $('#txtSessionId').val(),
                                Name: $('#sessionName').val(),
                                Description: $('#sessionDescription').val(),
                                Address: sessionAddress,
                                LivestreamUrl: $('#sessionLivestreamUrl').val()
                            },
                            StartTimeStr: startTimeStr,
                            EndTimeStr: endTimeStr,
                        },
                        success: function (data) {
                            reloadTable();
                            swal("Thành công!", "Bạn đã update thông tin phiên làm thành công", "success");
                        },
                        error: function (data) {
                            console.log(data);
                        }
                        

                    });
                    clearErrorEditSession();
                    $('#btn-update-session').attr('data-dismiss', 'modal');
                }
                else {
                    $('#btn-update-session').attr('data-dismiss', null);
                }

                
            });

            //Add Session
            $('#btn-add-session').on('click', function () {
                clearErrorAddSession();

                var sessionName = $('#txtNameAdd').val();
                var sessionDescription = $('#txtDescriptionAdd').val();
                var sessionAddress = $('#txtSessionAddress').val();
                var livestreamUrl = $('#txtLivestreamAdd').val();

                var isValid = true;
                if (sessionName.length === 0) {
                    isValid = false;
                    $('#errorNameAdd').css('display', 'block');
                }
                if (sessionDescription.length === 0) {
                    isValid = false;
                    $('#errorDesAdd').css('display', 'block');
                }
                if (sessionAddress.length === 0) {
                    isValid = false;
                    $('#errorAddressAdd').css('display', 'block');
                }
                if (livestreamUrl.length === 0) {
                    livestreamUrl = '';
                }

                if (isValid) {
                    $('#btn-add-session').attr('data-dismiss', 'modal');

                    var startEndTime = $('#startEndTimeAdd').val();
                    var timeSplit = startEndTime.split('-');
                    //var startTime = timeSplit[0].trim().split("/").reverse().join("-");
                    //var endTime = timeSplit[1].trim().split("/").reverse().join("-");
                    var startTimeStr = timeSplit[0];
                    var endTimeStr = timeSplit[1];

                    $.ajax({
                        url: urlApi + 'api/session/AddSession',
                        method: "POST",
                        data: {
                            Session: {
                                EventId: eventId,
                                Name: sessionName,
                                Description: sessionDescription,
                                Address: sessionAddress,
                                LivestreamUrl: livestreamUrl
                            },
                            StartTimeStr: startTimeStr,
                            EndTimeStr: endTimeStr,
                        },
                        success: function (data) {
                            reloadTable();
                            swal("Thành Công!", "Phiên làm đã được thêm vào thành công", "success");
                        },
                        error: function (data) {
                            console.log(data);
                        }
                    });
                    clearInputAddSession();
                }
                else {
                    $('#btn-add-session').attr('data-dismiss', null);
                }

            });

        });


        function openModelUpdate(id, name, startTime, endTime, description, livestreamUrl, address) {
            clearErrorEditSession();
            $('#sessionName').val(name);
            $('#sessionAddress').val(address);
            $('#sessionDescription').val(description);
            $('#startEndTimeUpdate').val(startTime + " - " + endTime);
            $('#txtSessionId').val(id);
            $('#sessionLivestreamUrl').val(livestreamUrl);
            $('#startEndTimeUpdate').daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY HH:mm'
                },
                startDate: startTime,
                endDate: endTime,
                minDate: '@(startDate)',
                timePicker: true,
                timePicker24Hour: true,
                timePickerIncrement: 10,
                onSelect: function (dateText) {
                    updateSelects(dateText);
                }
            });
        }

        function deleteSession(id) {

            swal({
                title: "Bạn có chắc?",
                text: "Bạn có chắc chắn, bạn sẽ không thể phục hồi lại!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Xóa!",
                cancelButtonText: "Hủy!",
                closeOnConfirm: false
            },
                function () {
                    $.ajax({
                        url: urlApi + 'api/session/DeleteSession',
                        method: "POST",
                        data: {
                            SessionID: id,

                        },
                        success: function (data) {
                            reloadTable();
                            swal("Xóa!", "Phiên làm đã được xóa thành công", "success");
                        },
                        error: function (data) {
                            console.log(data);
                            swal("Có lỗi", "Hãy xóa các hoạt động của phiên làm này", "error");
                        }
                    });
                });


        }

        function reloadTable() {
            $('#tblSession').DataTable().ajax.reload();
        }

        function clearErrorAddSession() {
            $('#errorNameAdd').css('display', 'none');
            $('#errorDesAdd').css('display', 'none');
            $('#errorAddressAdd').css('display', 'none');
            $('#errorLivestreamAdd').css('display', 'none');
        }

        function clearErrorEditSession() {
            $('#errorNameEdit').css('display', 'none');
            $('#errorDesEdit').css('display', 'none');
            $('#errorAddressEdit').css('display', 'none');
            $('#errorLivestreamEdit').css('display', 'none');
        }

        function clearInputAddSession() {
            $('#txtNameAdd').val("");
            $('#txtDescriptionAdd').val("");
            $('#txtLivestreamAdd').val("");
            $('#txtSessionAddress').val("");
        }

    </script>
}

