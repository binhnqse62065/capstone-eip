
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CapstoneProjectAdmin.Models.RegisterViewModel

<div class="container">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <div class="row">
                <h2 class="col-sm-10">Quản lý tài khoản người quản lý sự kiện</h2>
                <div class="col-sm-2">
                    <a class="btn btn-custom" href="@Url.Action("Register", "Account")" style="margin-top:20px">
                        <i class="fa fa-plus" style="margin-right:7px" aria-hidden="true"></i>Thêm
                    </a>
                </div>
            </div>
        </div>
        <div class="ibox-content">
            <table class="table table-hover table-bordered" id="tblAdmin">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
            </table>
        </div>


    </div>

</div>

<!-- Modal Update Guest -->
<div id="updateGuestModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật thông tài khoản</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">
                        Tên<span class="required">*</span>
                    </label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-briefcase" aria-hidden="true"></i>
                        </div>
                        <input disabled required id="txtNameEdit" type="text" class="form-control" placeholder="Vui lòng nhập tên">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">
                        Số điện thoại<span class="required"></span>
                    </label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-briefcase" aria-hidden="true"></i>
                        </div>
                        <input required id="txtPhoneEdit" type="tel" class="form-control" placeholder="Vui lòng nhập số điện thoại">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Email</label>
                    <div class="col-sm-9 input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </div>
                        <input required id="txtEmailEdit" type="email" class="form-control" placeholder="Vui lòng nhập email">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnEditAdmin" class="btn btn-primary" data-dismiss="modal">Lưu</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>

        $(document).ready(function () {
            InitAdminDatatable();
        });

        function InitAdminDatatable() {
            $('#tblAdmin').DataTable({
                "oLanguage": {
                    "sSearch": "Tìm kiếm",
                    "oPaginate": {
                        "sFirst": "Trang đầu",
                        "sLast": "Trang cuối",
                        "sNext": "Trang kế",
                        "sPrevious": "Trang trước"
                    },
                    "sInfoEmpty": "",
                    "sInfo": "Hiển thị từ dòng _START_ tới _END_ trong tổng số _TOTAL_ dòng",
                    "sZeroRecords": "Không có dữ liệu",
                    "sLengthMenu": "Hiển thị _MENU_ dòng"
                },
                ajax: {
                    url: '@Url.Action("GetAdmin", "SystemAdmin")',
                    //dataSrc: ""
                },
                columns: [
                    {
                        name: "UserName",
                        render: function (data, type, row) {
                            return row.UserName;
                        }
                    },
                    {
                        name: "PhoneNumber",
                        render: function (data, type, row) {
                            return row.PhoneNumber;
                        }
                    },
                    {
                        name: "Email",
                        render: function (data, type, row) {
                            return row.Email;
                        }
                    },
                    {
                        name: "Function",
                        render: function (data, type, row) {
                            return '<button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#updateGuestModal" onclick="openModelUpdate(\'' + row.Id + '\', \'' + row.UserName + '\', \'' + row.PhoneNumber + '\', \'' + row.Email + '\')"><i class="fa fa-pencil"></i></button>     ' +
                                '<button class="btn btn-danger btn-sm btn-delete" onclick="deleteUser(\'' + row.Id + '\')"><i class="fa fa-trash"></i></button>';
                        }
                    }
                ]
            });
        }

        $('#btnEditAdmin').on('click', function () {
            var userId = $(this).attr('value');
            var phone = $('#txtPhoneEdit').val();
            var email = $('#txtEmailEdit').val();
            $.ajax({
                url: '@Url.Action("UpdateUser", "SystemAdmin")',
                method: "POST",
                data: {
                    Id: userId,
                    Email: email,
                    PhoneNumber: phone
                },
                success: function (data) {
                    if (data.success) {
                        reloadTable();
                        swal("Thành Công!", "Cập nhật thông tin người tham gia thành công", "success");
                    }
                    
                },
                error: function (data) {
                    console.log(data);
                }
            });
        });

        function openModelUpdate(id, username, phone, email) {
            $('#txtNameEdit').val(username);
            $('#txtPhoneEdit').val(phone);
            $('#txtEmailEdit').val(email);
            $('#btnEditAdmin').attr('value', id);
        }

        function deleteUser(userId) {
            swal({
                title: "Bạn có chắc?",
                text: "Bạn có chắc chắn, bạn sẽ không thể phục hồi lại!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Xóa!",
                cancelButtonText: "Hủy!",
                closeOnConfirm: false
            },
                function () {
                    $.ajax({
                        url: '@Url.Action("DeleteUser", "SystemAdmin")',
                        method: "POST",
                        data: {
                            Id: userId

                        },
                        success: function (data) {
                            reloadTable();
                            swal("Xóa!", "Người tham gia đã được xóa thành công", "success");
                        },
                        error: function (data) {
                            console.log(data);
                            swal("Có lỗi", "Không thể xóa", "error");
                        }
                    });
                });
        }

        function reloadTable() {
            $('#tblAdmin').DataTable().ajax.reload();
        }
    </script>
}


