
@{
    ViewBag.Title = "Index";
}

@using HmsService.Models.Entities;
@model Event

@{
    var listSpeaker = Model.EventCollections.FirstOrDefault(e => e.EventCollectionID == 2).CollectionItems;
}

<div class="container">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <div class="row">
                <h2 class="col-sm-10">Speaker</h2>
                <div class="col-sm-2">
                    <button class="btn btn-primary" type="submit" data-toggle="modal" data-target="#addSpeakerModal" style="margin-top:20px">
                        <i class="fa fa-plus" style="margin-right:7px" aria-hidden="true"></i>Add Speaker
                    </button>
                </div>
            </div>
            <div class="modal fade" id="addSpeakerModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add Speaker</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="col-sm-3 form-control-label">Name:</label>
                                <div class="col-sm-9 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-briefcase" aria-hidden="true"></i>
                                    </div>
                                    <input id="newName" type="text" class="form-control" placeholder="Enter Speaker's name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 form-control-label">Description:</label>
                                <div class="col-sm-9 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-info" aria-hidden="true"></i>
                                    </div>
                                    <textarea id="newDescription" type="text" class="form-control" placeholder="Enter Description"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 form-control-label">Image:</label>
                                <div class="col-sm-9 input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-link" aria-hidden="true"></i>
                                    </div>
                                    <input id="newImageUrl" type="text" class="form-control" placeholder="Input image url">
                                </div>
                                <div class="col-sm-3"></div>
                                <div class="row col-sm-9">
                                    <label>or</label>
                                    <input type="file" id="myFile">
                                </div>

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="btn-add" type="button" class="btn btn-primary" data-dismiss="modal" style="margin-top:5px">Add</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h2 class="modal-title">Are your sure?</h2>
                    </div>
                    <div class="modal-body">
                        <h3 class="speaker-del-title"></h3>
                    </div>
                    <div class="modal-footer">
                        <button id="btn-del" type="button" class="btn btn-default speaker-del-id" data-dismiss="modal">Delete</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>

            </div>
        </div>

        <div class="modal fade" id="speakerModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Speaker</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="col-sm-3 form-control-label">Name:</label>
                            <div class="col-sm-9 input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-briefcase" aria-hidden="true"></i>
                                </div>
                                <input type="text" class="form-control speaker-title">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 form-control-label">Descripstion:</label>
                            <div class="col-sm-9 input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-info" aria-hidden="true"></i>
                                </div>
                                <textarea type="text" class="form-control speaker-description"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 form-control-label">Image:</label>
                            <div class="col-sm-9 input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-link" aria-hidden="true"></i>
                                </div>
                                <textarea type="text" class="form-control speaker-image"></textarea>
                            </div>
                            <div class="col-sm-3"></div>
                            <div class="row col-sm-9">
                                <label>or</label>
                                <input type="file" id="myFile">
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="btn-save" type="submit" class="btn btn-primary speaker-id" data-dismiss="modal" style="margin-top:5px">Save change</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>

        <table class="table table-hover table-bordered" id="tblSpeaker">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Function</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section scripts {
    <script>
        function showModalSpeaker(id, name, description, image) {
            $('.speaker-title').val(name);
            $('.speaker-description').val(description);
            $('.speaker-image').val(image);
            $('.speaker-id').val(id); 

        }

         function delSpeaker(id, name) {
            $('.speaker-del-id').val(id);
            $('.speaker-del-title').html("Delete Speaker " + name);
        }

         $(document).ready(function () {
            $('#tblSpeaker').DataTable({
                ajax: {
                    url: "api/speaker/getAllSpeaker",
                    dataSrc: ""
                },
                columns: [
                    {
                        name: "Name",
                        render: function (data, type, row) {
                            return row.name;
                        }
                    },
                    {
                        name: "Description",
                        render: function (data, type, row) {
                            return row.description;
                        }
                    },
                    {
                        name: "Image",
                        render: function (data, type, row) {
                            return '<img src="' + row.imageUrl + '" alt="brand" class="img-fluid" style="width:260px; height:200px;">';
                        }
                    },
                    {
                        name: "Function",
                        render: function (data, type, row) {
                            return '<button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#speakerModal" onclick="showModalSpeaker(' + row.collectionItemID + ',\'' + row.name + '\', \'' + row.description + '\', \'' + row.imageUrl + '\')"><i class="fa fa-pencil"></i></button>     ' +
                                '<button class="btn btn-danger btn-sm speaker-id" data-toggle="modal" data-target="#deleteModal" onclick="delSpeaker(' + row.collectionItemID + ',\'' + row.name + '\')"><i class="fa fa-trash"></i></button>';
                        }
                    }
                ]
             });

        });
    </script>
}
    <script src="~/Content/SpeakerJs/Speaker.js"></script>
