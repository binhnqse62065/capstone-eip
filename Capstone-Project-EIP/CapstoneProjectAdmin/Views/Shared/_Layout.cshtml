    <script src="~/Content/AdminLTE-master/dist/js/adminlte.min.js"></script>
    <!--Data Table-->
    <script src="~/Content/DataTables/datatables.min.js"></script>
    <!--Sweet Alert-->
    <script src="~/Content/bootstrap-sweetalert-master/dist/sweetalert.min.js"></script>
    <!--Filestack-->
    <script src="~/Content/Filestack/filestack.min.js"></script>



</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top navbar-custom">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar side-bar-custom" style="padding-top:0;">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Content/AdminLTE-master/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>Quang Bình</p>
                        @*<a href="#"><i class="fa fa-circle text-success"></i> Online</a>*@
                    </div>
                </div>
              
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">

                    <li class="treeview active menu-open">
                        <a href="#">
                            <i class="fa fa-pie-chart"></i>
                            <span>Cấu hình chung</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu tree-view-menu-custom">
                            <li><a href="@Url.Action("Index","Home", new { id = eventId})"><i class="fa fa-home" aria-hidden="true"></i> <span>Trang chủ</span></a></li>
                            <li><a href="@Url.Action("Index","Session" , new { id = eventId})"><i class="fa fa-calendar" aria-hidden="true"></i><span>Phiên Làm Việc</span></a></li>
                            <li><a href="@Url.Action("Index","QA", new { id = eventId})"><i class="fa fa-question-circle"></i> <span>Hỏi Đáp</span></a></li>
                            <li><a href="@Url.Action("Index","Voting", new { id = eventId})"><i class="fa fa-check-circle-o"></i> <span>Bình Chon</span></a></li>
                            <li><a href="@Url.Action("Index","Speaker", new { id = eventId})"><i class="fa fa-users"></i> <span>Diễn Giả</span></a></li>
                            <li><a href="@Url.Action("Index","Sponsor", new { id = eventId})"><i class="fa fa-users"></i> <span>Tài Trợ</span></a></li>
                        </ul>
                    </li>

                    <li><a href="@Url.Action("Index","ManageSession", new { id = eventId})"><i class="fa fa-wrench" aria-hidden="true"></i> <span>Trung tâm điều khiển</span></a></li>
                    @*<li class="treeview">
                        <a href="#">
                            <i class="fa fa-pie-chart"></i>
                            <span>Trung tâm điểu khiển</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu tree-view-menu-custom">
                            <li><a href="@Url.Action("Index","ManageSession", new { id = eventId})"><i class="fa fa-clock-o" aria-hidden="true"></i> <span>Trung tâm điều khiển</span></a></li>
                            <li><a href="@Url.Action("Index","Timeline", new { id = eventId})"><i class="fa fa-clock-o" aria-hidden="true"></i> <span>Dòng Thời Gian</span></a></li>
                            <li><a href="@Url.Action("Index","Interaction" , new { id = eventId})"><i class="fa fa-check-circle-o"></i> <span>Tương Tác</span></a></li>
                            <li><a href="@Url.Action("Index","Activity" , new { id = eventId})"><i class="fa fa-rocket" aria-hidden="true"></i><span>Hoạt Động</span></a></li>

