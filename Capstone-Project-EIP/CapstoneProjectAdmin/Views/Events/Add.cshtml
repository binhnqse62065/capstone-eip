
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutEvent.cshtml";
    string curPath = Request.Url.GetLeftPart(UriPartial.Authority) + Request.ApplicationPath;
}

<div class="col-lg-offset-2 col-md-8">
    <div class="box box-info box-add-event">
        <div class="box-header with-border">
            <h3 class="box-title">Thêm mới sự kiện</h3>
        </div>
        <div class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label class="col-md-2 control-label">Tên sự kiện</label>
                    <div class="col-md-10">
                        <input id="event-name" type="text" class="form-control" placeholder="Vui lòng nhập tên của sự kiện" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Miêu tả sự kiện</label>
                    <div class="col-md-10">
                        <input id="event-description" type="text" class="form-control" placeholder="Vui lòng nhập miêu tả của sự kiện" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Thời gian bắt đầu - thời gian kết thúc</label>
                    <div class="col-md-10">
                        <input id="event-time-range" type="text" class="form-control" placeholder="Vui lòng nhập tên sự kiện" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Địa chỉ</label>
                    <div class="col-md-10">
                        <input id="event-address" type="text" class="form-control" placeholder="Vui lòng nhập địa chỉ sự kiện" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Kinh độ</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" placeholder="Vui lòng nhập kinh độ của địa điểm diễn ra sự kiện" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Vĩ độ</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" placeholder="Vui lòng nhập vĩ độ của địa điểm diễn ra sự kiện" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Mã đăng nhập</label>
                    <div class="col-md-10">
                        <input id="event-code" type="text" class="form-control" placeholder="Vui lòng nhập mã đăng nhập của sự kiện" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Hình đại diện</label>
                    <div class="col-md-10">
                        <div class="field">
                            <div class="control">
                                <button class="button" type="button" id="picker">Chọn file</button>
                                <input type="hidden" id="fileupload">
                            </div>
                        </div>
                        <div id="thumbnail-container"></div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button class="btn btn-primary pull-right" id="btn-add-event">Lưu</button>
                <a href="@Url.Action("Index","Events")" class="btn btn-danger pull-right margin-r-5">Hủy</a>
            </div>
        </div>

    </div>

</div>


@section scripts {
    <script>
        $(document).ready(function () {
            var urlApi = '@curPath';

            $('#event-time-range').daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY'
                }
            });



            //Add event
            $('#btn-add-event').on('click', function () {
                var eventName = $('#event-name').val();
                var eventDescription = $('#event-description').val();
                var eventAddress = $('#event-address').val();
                var eventLoginCode = $('#event-code').val();
                var imageUrl = $('#fileupload').val();

                var eventTimeSplit = $('#event-time-range').val().split('-');
                var startTime = eventTimeSplit[0].trim().split('/').reverse().join('-');
                var endTime = eventTimeSplit[1].trim().split('/').reverse().join('-');

                $.ajax({
                    url: '@Url.Action("AddNewEvent", "Events")',
                    method: "POST",
                    data: {
                        Name: eventName,
                        EventDescription: eventDescription,
                        Address: eventAddress,
                        CodeLogin: eventLoginCode,
                        StartTime: startTime,
                        EndTime: endTime,
                        ImageURL: imageUrl
                    },
                    success: function (data) {

                        swal({
                                    title: "Success!",
                                    text: "Session has been added successfully",
                                    type: "success"
                                 },
                                function () {
                                window.location.replace('@Url.Action("Index", "Events")');
                            });



                    },
                    error: function (data) {
                        console.log(data);
                    }
                });

            });






            //Filestack dùng để up hình
            // Set up the picker
            const client = filestack.init('AIA0Qk3iTSGzr9dIsuPdgz');
            const options = {
                onUploadDone: updateForm,
                maxSize: 10 * 1024 * 1024,
                accept: 'image/*',
                uploadInBackground: false,
                fromSources: ['local_file_system', 'imagesearch', 'facebook', 'instagram', 'dropbox', 'picasa', 'url']
            };
            const picker = client.picker(options);

            // Get references to the DOM elements

            const form = document.getElementById('pick-form');
            const fileInput = document.getElementById('fileupload');
            const btn = document.getElementById('picker');
            const nameBox = document.getElementById('nameBox');
            const urlBox = document.getElementById('urlBox');

            // Add our event listeners

            btn.addEventListener('click', function (e) {
                e.preventDefault();
                picker.open();
            });

            form.addEventListener('submit', function (e) {
                e.preventDefault();
                alert('Submitting: ' + fileInput.value);
            });

            // Helper to overwrite the field input value

            function updateForm(result) {
                const fileData = result.filesUploaded[0];
                fileInput.value = fileData.url;

                // If file is resizable image, resize and embed it as a thumbnail preview
                if (['jpeg', 'png'].indexOf(fileData.mimetype.split('/')[1]) !== -1) {
                    const container = document.getElementById('thumbnail-container');
                    const thumbnail = document.getElementById('thumbnail') || new Image();
                    thumbnail.id = 'thumbnail';
                    thumbnail.src = client.transform(fileData.handle, {
                        resize: {
                            width: 200
                        }
                    });

                    if (!container.contains(thumbnail)) {
                        container.appendChild(thumbnail);
                    }
                }
            };
        });

    </script>
}

